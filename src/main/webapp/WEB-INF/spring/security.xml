<beans:beans xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns="http://www.springframework.org/schema/security"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
              http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
              http://www.springframework.org/schema/security
              http://www.springframework.org/schema/security/spring-security-4.0.xsd">

    <http>
        <access-denied-handler error-page="/403.jsp"/>
        <intercept-url pattern="/login.jsp" access="isAnonymous()"/>
        <intercept-url pattern="/**" access="isFullyAuthenticated()"/>
        <intercept-url pattern="/add/*" access="hasRole('ROLE_USER')"/>
        <intercept-url pattern="/update/*" access="hasRole('ROLE_USER')"/>
        <intercept-url pattern="/delete/*" access="hasRole('ROLE_ADMIN')"/>
        <form-login login-page="/login.jsp"
                    login-processing-url="/j_spring_security_check.action"
                    default-target-url="/index"
                    authentication-failure-url="/login.jsp?error=true"
                    always-use-default-target="true"/>
        <logout logout-url="/logout" logout-success-url="/index"/>
        <anonymous username="guest" granted-authority="ROLE_ANONYMOUS"/>
        <remember-me/>
    </http>

    <authentication-manager>
        <authentication-provider>
            <password-encoder hash="sha"/>
            <user-service>
                <!-- sha(admin) = d033e22ae348aeb5660fc2140aec35850c4da997 -->
                <!-- sha(user) = 12dea96fec20593566ab75692c9949596833adc9 -->
                <user name="admin" password="d033e22ae348aeb5660fc2140aec35850c4da997"
                      authorities="ROLE_ADMIN,ROLE_USER"/>
                <user name="user" password="12dea96fec20593566ab75692c9949596833adc9" authorities="ROLE_USER"/>
            </user-service>
        </authentication-provider>
    </authentication-manager>

</beans:beans>